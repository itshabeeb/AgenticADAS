# Agentic ADAS Environment Variables

# Model Paths
VOSK_MODEL_PATH=models/vosk-model-small-en
DISTILBERT_MODEL_PATH=models/distilbert-intent
YOLOV11N_MODEL_PATH=models/speed_sign_board.pt  # YOLOv11n speed sign detection model
PHI3_MODEL_PATH=models/phi-3-mini.gguf

# Speed Detection Settings
SPEED_DETECTION_CONFIDENCE=0.65  # Minimum confidence threshold for speed sign detection
SPEED_DETECTION_RESOLUTION=640x840  # Camera resolution for speed detection

# Vision Settings
CAMERA_INDEX=0  # or picamera0 for Raspberry Pi camera
FRAME_WIDTH=640
FRAME_HEIGHT=480

# Audio Settings
AUDIO_DEVICE_INDEX=0
SPEAKING_RATE=175  # Words per minute for audio feedback
VOICE_LANGUAGE=en
VOICE_PITCH=50

# Vehicle Control
GPIO_ENABLED=false  # Set to true when running on Raspberry Pi

# GPIO Pin Configuration (when GPIO_ENABLED=true)
GPIO_ENA=12  # PIN 12
GPIO_ENB=21  # PIN 40
GPIO_IN1=16  # PIN 36
GPIO_IN2=12  # PIN 32
GPIO_IN3=6   # PIN 31
GPIO_IN4=5   # PIN 29